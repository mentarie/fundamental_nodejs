<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Edit Data Contact</h2>

            <% if (typeof error != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% error.forEach(err => { %>
                            <li><%= err.msg %> </li>
                        <% }) %>
                    </ul>
                </div>
            <% } %> 

            <form method="post" action="/contact/update">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="text" class="form-control" id="email" name="email" required value="<%= contact.email %>">
                </div>
                <div class="mb-3">
                  <label for="nohp" class="form-label">Nomor HP</label>
                  <input type="text" class="form-control" id="nohp" name="nohp" required value="<%= contact.nohp %>">
                </div>
                <button type="submit" class="btn btn-primary">Simpan Data Contact</button>
              </form>
        </div>
    </div>
</div>